<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MyApp.Views.ItemDetailPage"
             Title="{Binding Title}">

    <StackLayout Spacing="20" Padding="15">
        <Label Text="Reference:" FontSize="Medium" />
        <Label Text="{Binding Reference}" FontSize="Small"/>
        <Label Text="Nom:" FontSize="Medium" />
        <Label Text="{Binding Nom}" FontSize="Small"/>
        <Label Text="Prix:" FontSize="Medium" />
        <Label Text="{Binding Prix}" FontSize="Small"/>
        <Label Text="Quantite:" FontSize="Medium" />
        <Label Text="{Binding Qt}" FontSize="Small"/>
        
       
        
    </StackLayout>
    
</ContentPage>
